{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist"
  },
  "include": [
    "projects/log/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "projects/log/src/mocks",
    "projects/log/src/test.ts",
    "projects/log/src/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
